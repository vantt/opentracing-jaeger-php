{
    "name": "vantt/opentracing-jaeger-php",
    "description": "php opentracing client for jaeger",
    "keywords": [
        "jaeger",
        "trace",
        "opentracing"
    ],
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1||^8.0",
        "packaged/thrift": "0.10.0",
        "vantt/opentracing-php": "^1.1.0"
    },
    "replace": {
        "jukylin/jaeger-php": "^2.1.3"
    },
    "authors": [
        {
            "name": "Tran Toan Van",
            "email": "trantoanvan@outlook.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jaeger\\": "src\\Jaeger"
        },
        "files": [
            "src/Jaeger/Constants.php"
        ]
    },
    "archive": {
        "exclude": ["./docker-compose.yml","./runTests.sh", "./e2e"]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5.14 || ^7.0 || ^9.0",
        "phpunit/php-code-coverage": "^6.1||^9.1"
    }
}
