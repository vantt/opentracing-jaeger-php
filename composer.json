{
    "name": "vantt/opentracing-jaeger-php",
    "description": "php opentracing client for jaeger",
    "keywords": [
        "jaeger",
        "trace",
        "opentracing"
    ],
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6||^7.0",
        "packaged/thrift": "0.10.0",
        "vantt/opentracing-php": "^1.0.0-beta5"
    },
    "authors": [
        {
            "name": "Tran Toan Van",
            "email": "trantoanvan@outlook.com"
        }
    ],
    "replace": {
        "jukylin/jaeger-php": "^2.1.3"
    },
    "autoload": {
        "psr-4": {
            "Jaeger\\": "src\\Jaeger"
        },
        "files": [
            "src/Jaeger/Constants.php"
        ]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "php-coveralls/php-coveralls": "^1.0"
    }
}
